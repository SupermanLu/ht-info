<view class="logo-con">
  <image class="logo" src="../../assets/如意淘.png" mode="widthFix" />
</view>
<form class="login-form">
  <view class="input-group {{userid_focus ? 'active' : ''}}">
    <text class="input-label">手机号</text>
    <input type="number" cursor-spacing="30" id="userid" maxlength="7" placeholder="请输入手机号" bindinput="useridInput" bindfocus="inputFocus" bindblur="inputBlur" />
  </view>
  <view class="input-group {{passwd_focus ? 'active' : ''}}">
    <text class="input-label">姓名</text>
    <input  cursor-spacing="30" id="passwd" placeholder="请输入姓名" bindinput="passwdInput" bindfocus="inputFocus" bindblur="inputBlur" />
  </view>
  <view class="login-button">
    <van-button color="#13227a" round size="large" bindtap="login">登录</van-button>
  </view>
</form>